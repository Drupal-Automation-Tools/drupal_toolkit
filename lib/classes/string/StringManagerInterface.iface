<?php
/**
 * @file Defines the StringManagerInterface
 */

/**
 * Manages user-facing strings.
 * 
 * @ingroup di_interfaces
 */
interface StringManagerInterface {
  
  /**
   * Finds a string for the given key.
   * 
   * @param string $key
   *   The key to find a string for.
   * @param string $default
   *   Default to fall back on if not found.
   * 
   * @return string
   *   User-friendly string.
   */
  function getString($key, array $args = array(), $default = NULL);
  
}