<?php
/**
 * @file Defines the EventDependency interface.
 */

/**
 * Dependency injection interface for interfaces.
 * 
 * @ingroup di_dependency_interfaces
 */
interface EventDependency {
  
  /**
   * Fetches the event manager being used.
   * 
   * @return EventManagerInterface
   */
  function events();
  
  /**
   * Sets the event manager being used.
   * 
   * @param EventManagerInterface $em
   *   The event manager.
   */
  function setEventManager(EventManagerInterface $em);
  
}
