<?php
/**
 * @file Defines the SiteInfoEvent class.
 */

/**
 * Allows other plug-ins to add info to the site-info and subsite-info 
 * commands.
 */
class SiteInfoEvent extends DtkEvent {
  
  /**
   * An array of strings to be displayed to the user, one per line.
   * 
   * @var array
   */
  private $info = array();
  
  /**
   * The entity that info is being requested for.
   * 
   * @var GenericDrupalEntity
   */
  private $entity;
  
  /**
   * 
   * @param GenericDrupalEntity $entity
   *   The entity that info is being requested for.
   */
  public function __construct(GenericDrupalEntity $entity) {
    $this->entity = $entity;
  }
  
  /**
   * Returns the entity that information is being requested for.
   * 
   * @return GenericDrupalEntity
   *   The entity that information is being requested for.
   */
  public function getEntity() {
    return $this->entity;
  }
  
  /**
   * Sets a piece of information about the entity.
   * 
   * @param string $key
   *   Translated label for the piece of information.
   * @param string $info
   *   Information.
   */
  public function appendInfo($key, $info) {
    $this->info[$key] = $info;
  }
  
  /**
   * Retrieves all information set about the entity.
   * 
   * @return array
   *   An array of key-value pairs about the entity.
   */
  public function getInfo() {
    return $this->info;
  }
  
}

