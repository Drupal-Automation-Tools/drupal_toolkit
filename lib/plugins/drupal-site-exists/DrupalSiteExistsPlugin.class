<?php
/*
 * @file Defines the DrupalSiteExistsPlugin class.
 */

/**
 * Responsible for registering the SiteExistsCommand object and its
 * configuration, etc.
 * 
 * @ingroup plugins
 */
class DrupalSiteExistsPlugin extends GenericPlugin implements EventListener {

  public function initialize() {
    $this->events()->registerListener(array(
      EVENT_FIND_HELP_INSTRUCTIONS,
      EVENT_CORE_REGISTER_COMMANDS,
    ), $this);
  }
  
  public function captureEvent(DtkEvent &$context, $eventType) {
    switch ($eventType) {
      case EVENT_FIND_HELP_INSTRUCTIONS:
        if ($context instanceof HelpInstructionsEvent) {
          $site = new HelpInstructions($this->str(STRING_HELP_DSM_CATEGORY), 'site-exists', $this->str(STRING_HELP_SITE_EXISTS_DESCRIPTION));
          $site->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
          $context->registerInstruction($site);
          $subsite = new HelpInstructions($this->str(STRING_HELP_DSSM_CATEGORY), 'subsite-exists', $this->str(STRING_HELP_SUBSITE_EXISTS_DESCRIPTION));
          $subsite->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
          $subsite->defineArgument(2, $this->str(STRING_HELP_SUBSITE_NAME));
          $context->registerInstruction($subsite);
        }
        break;
      case EVENT_CORE_REGISTER_COMMANDS:
        $this->router()->addCommand('site-exists', new SiteExistsCommand());
        $this->router()->addCommand('subsite-exists', new SubSiteExistsCommand());
        break;
    }
  }
  
}
