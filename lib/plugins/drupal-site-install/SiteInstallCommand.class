<?php
/**
 * @file Defines the SiteInstallCommand class.
 */

/**
 * Responsible for installing a Drupal site.
 */
class SiteInstallCommand extends GenericSiteCommand {
  
  /**
   * The necessary steps for installing a site.
   * 
   * @var array
   */
  private $steps = array(
    array(
      'event' => EVENT_INSTALL_START,
      'optional' => TRUE,
    ),
    array(
      'event' => EVENT_INSTALL_TASK,
    ),
    array(
      'event' => EVENT_INSTALL_EXTRAS,
    ),
    array(
      'event' => EVENT_INSTALL_DONE,
      'optional' => TRUE,
    ),
  );
  
  public function verifyRequirements() {
    if (!$this->requireSite()) {
      return FALSE;
    }
    if (!extra_empty($this->getSite()->getSetting(SITE_IS_INSTALLED))) {
      $this->error(STRING_ERROR_SITE_INSTALLED);
      return FALSE;
    }
    return parent::verifyRequirements();
  }
  
  public function executeCommand() {
    $this->executeAllSteps($this->steps, array(
      'error' => STRING_INSTALL_ERROR,
      'type' => COMMAND_STEP_SITE,
    ));
    $site = $this->getSite();
    $site->setSetting(SITE_IS_INSTALLED, "1");
    $site->setSetting(SITE_LAST_SUBSITE_INSTALL_BUILD, $site->getBuildID());
    $this->saveSiteConfiguration();
  }
  
}
