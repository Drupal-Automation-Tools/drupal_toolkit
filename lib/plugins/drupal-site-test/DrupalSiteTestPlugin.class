<?php
/**
 * @file Defines the DrupalSiteTestPlugin class.
 */

/**
 * Responsible for registering the SiteTestCommand command.
 * 
 * @ingroup plugins
 */
class DrupalSiteTestPlugin extends GenericPlugin implements EventListener {
  
  public function initialize() {
    $this->events()->register(array(
      EVENT_CORE_REGISTER_COMMANDS,
    ), $this);
  }
  
  public function captureEvent(DtkEvent &$event, $type) {
    switch ($type) {
      case EVENT_CORE_REGISTER_COMMANDS:
        $this->router()->addCommand('site-test', new SiteTestCommand());
        break;
    }
  }
  
}