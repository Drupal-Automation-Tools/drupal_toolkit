<?php
/**
 * @file Defines the DrupalSiteTestPlugin class.
 */

/**
 * Responsible for registering the SiteTestCommand command.
 * 
 * @ingroup plugins
 */
class DrupalSiteTestPlugin extends GenericPlugin implements EventListener {
  
  public function initialize() {
    $this->events()->registerListener(array(
      EVENT_CORE_REGISTER_COMMANDS,
      EVENT_FIND_HELP_INSTRUCTIONS,
    ), $this);
  }
  
  public function captureEvent(DtkEvent &$event, $type) {
    switch ($type) {
      case EVENT_FIND_HELP_INSTRUCTIONS:
        if ($event instanceof HelpInstructionsEvent) {
          $hi = new HelpInstructions($this->str(STRING_HELP_DSM_CATEGORY), 'site-test', $this->str(STRING_HELP_TEST_DESCRIPTION));
          $hi->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
          $event->registerInstruction($hi);
        }
        break;
      case EVENT_CORE_REGISTER_COMMANDS:
        $this->router()->addCommand('site-test', new SiteTestCommand());
        break;
    }
  }
  
}