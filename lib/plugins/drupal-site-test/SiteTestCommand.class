<?php
/**
 * @file Defines the SiteTestCommand class.
 */

/**
 * Allows the user to execute test cases against a site.
 * 
 * @ingroup commands
 */
class SiteTestCommand extends GenericSiteCommand {
  
  /**
   * Steps to execute.
   * 
   * @var array
   */
  private $steps = array(
    array(
      'event' => EVENT_GENERATE_TESTS,
    ),
  );
  
  public function verifyArguments() {
    if (!$this->requireSite()) {
      return FALSE;
    }
    return parent::verifyArguments();
  }
  
  public function executeCommand() {
    $this->executeAllSteps($this->steps, array(
      'type' => COMMAND_STEP_SITE,
    ));
  }
  
}