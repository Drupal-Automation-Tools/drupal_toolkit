<?php
/**
 * @file Defines the SiteMetricsCommand class.
 */

/**
 * Allows the user to generate different forms of metrics.
 * 
 * @ingroup commands
 */
class SiteMetricsCommand extends GenericSiteCommand {
  
  /**
   * Steps to execute in order to generate metrics.
   * 
   * @var array
   */
  private $steps = array(
    array(
      'event' => EVENT_GENERATE_METRICS,
      'optional' => TRUE,
    ),
  );
  
  public function verifyArguments() {
    if (!$this->requireSite()) {
      return FALSE;
    }
    return parent::verifyArguments();
  }
  
  public function executeCommand() {
    $this->executeAllSteps($this->steps, array(
      'type' => COMMAND_STEP_SITE,
    ));
  }
  
}