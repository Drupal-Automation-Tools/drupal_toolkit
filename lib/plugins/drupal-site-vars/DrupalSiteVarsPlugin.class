<?php
/**
 * Defines the DrupalSiteVarsPlugin class.
 */

/**
 * Sets up the set/get vars commands
 * 
 * @ingroup plugins
 */
class DrupalSiteVarsPlugin extends GenericPlugin implements EventListener {
  
  public function initialize() {
    $this->events()->registerListener(array(
      EVENT_CORE_REGISTER_COMMANDS,
      EVENT_FIND_HELP_INSTRUCTIONS,
    ), $this);
  }
  
  public function captureEvent(DtkEvent &$event, $eventType) {
    switch ($eventType) {
      case EVENT_FIND_HELP_INSTRUCTIONS:
        $hi = new HelpInstructions($this->str(STRING_HELP_DSM_CATEGORY), 'site-get-var', $this->str(STRING_HELP_SITE_GET_VAR_DESCRIPTION));
        $hi->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
        $hi->defineArgument(2, $this->str(STRING_HELP_VAR_NAME));
        $event->registerInstruction($hi);
        $hi = new HelpInstructions($this->str(STRING_HELP_DSM_CATEGORY), 'site-set-var', $this->str(STRING_HELP_SITE_SET_VAR_DESCRIPTION));
        $hi->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
        $hi->defineArgument(2, $this->str(STRING_HELP_VAR_NAME));
        $hi->defineArgument(3, $this->str(STRING_HELP_VAR_VALUE));
        $event->registerInstruction($hi);
        $hi = new HelpInstructions($this->str(STRING_HELP_DSSM_CATEGORY), 'subsite-get-var', $this->str(STRING_HELP_SUBSITE_GET_VAR_DESCRIPTION));
        $hi->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
        $hi->defineArgument(2, $this->str(STRING_HELP_SUBSITE_NAME));
        $hi->defineArgument(3, $this->str(STRING_HELP_VAR_NAME));
        $event->registerInstruction($hi);
        $hi = new HelpInstructions($this->str(STRING_HELP_DSSM_CATEGORY), 'subsite-set-var', $this->str(STRING_HELP_SUBSITE_SET_VAR_DESCRIPTION));
        $hi->defineArgument(1, $this->str(STRING_HELP_SITE_NAME));
        $hi->defineArgument(2, $this->str(STRING_HELP_SUBSITE_NAME));
        $hi->defineArgument(3, $this->str(STRING_HELP_VAR_NAME));
        $hi->defineArgument(4, $this->str(STRING_HELP_VAR_VALUE));
        $event->registerInstruction($hi);
        break;
      case EVENT_CORE_REGISTER_COMMANDS:
        $this->router()->addCommand('site-get-var', new SiteGetVarsCommand());
        $this->router()->addCommand('site-set-var', new SiteSetVarsCommand());
        $this->router()->addCommand('subsite-get-var', new SubsiteGetVarsCommand());
        $this->router()->addCommand('subsite-set-var', new SubsiteSetVarsCommand());
        break;
    }
  }
  
}