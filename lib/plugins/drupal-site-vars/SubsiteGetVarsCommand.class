<?php

class SubsiteGetVarsCommand extends SiteGetVarsCommand {
  
  
  public function verifyRequirements() {
    if (!$this->requireSubSite()) {
      return FALSE;
    }
    return parent::verifyRequirements();
  }
  
  public function executeCommand() {
    $this->displaySettings($this->getSubSite(), $this->args()->getArg(3));
  }
  
  protected function displaySettings(GenericDrupalEntity $entity, $setting = NULL) {
    $settings = array();
    if (empty($setting)) {
      $settings = $entity->getSettings();
    }
    else {
      $settings = array(
        $setting => $entity->getSetting($setting, NULL),
      );
    }
    $this->renderSettings($settings);
  }
  
}