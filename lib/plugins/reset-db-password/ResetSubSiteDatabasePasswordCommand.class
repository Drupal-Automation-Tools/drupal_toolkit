<?php

class ResetSubSiteDatabasePasswordCommand extends ResetSiteDatabasePasswordCommand {
  
  public function verifyRequirements() {
    if (!$this->requireSubSite()) { return FALSE; }
    return parent::verifyRequirements();
  }
    
  public function executeCommand() {
    $this->executePasswordReset($this->getSubSite(), $this->getSite()->getBuildName() . '::' . $this->getSubSite()->getBuildName());
  }
  
}
