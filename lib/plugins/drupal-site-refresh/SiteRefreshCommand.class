<?php
/**
 * @file Defines the SiteRefreshCommand class.
 */

/**
 * Refreshes the configuration on a site.
 * 
 * @ingroup commands
 */
class SiteRefreshCommand extends GenericSiteCommand {

  /**
   * An array of steps to execute for this command.
   * 
   * @var array
   */
  private $steps = array(
    array(
      'event' => EVENT_SITE_REFRESH_CONFIGURATION,
      'optional' => TRUE,
    ),
  );
  
  public function verifyArguments() {
    if (!$this->requireSite()) {
      return FALSE;
    }
    return parent::verifyArguments();
  }
  
  public function executeCommand() {
    $this->executeAllSteps($this->steps, array(
      'type' => COMMAND_STEP_SITE,
    ));
  }
  
}